---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/case-studies', label: 'Case Studies' },
  { href: '/about', label: 'About' },
  { href: '/support', label: 'Support' },
];

function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<header class="fixed top-0 w-full z-50 bg-surface/90 backdrop-blur-md border-b border-border">
  <nav aria-label="Main navigation" class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 flex items-center justify-between h-16">
    <a href="/" class="flex items-center gap-2.5" aria-label="Move to Digital — Home">
      <svg viewBox="0 0 182 120" xmlns="http://www.w3.org/2000/svg" class="h-8 w-auto" aria-hidden="true">
        <defs>
          <clipPath id="nav-m-clip">
            <rect x="0" y="5" width="182" height="115" />
          </clipPath>
        </defs>
        <path d="M 15 115 L 15 -15 L 65 58 L 115 -15 L 115 44"
              stroke="#C2714F" stroke-width="24" fill="none"
              stroke-linejoin="miter" stroke-linecap="butt"
              clip-path="url(#nav-m-clip)" />
        <rect x="103" y="44" width="24" height="71" fill="#D4A574" opacity="0.15"
              transform="rotate(0.5, 115, 80)" />
        <path d="M 109,53 L 133,53
                 C 160,53 178,68 178,84
                 C 178,100 160,115 133,115
                 L 109,115 Z
                 M 133,69
                 C 144,69 151,75 151,84
                 C 151,93 144,99 133,99 Z"
              fill="#D4A574" fill-rule="evenodd" />
      </svg>
      <span class="text-lg font-bold text-secondary tracking-tight">Move to Digital</span>
    </a>

    {/* Desktop navigation */}
    <ul class="hidden md:flex items-center gap-1">
      {navLinks.map(link => (
        <li>
          <a
            href={link.href}
            class={`px-3 py-2 text-sm font-medium rounded-md transition-colors ${
              isActive(link.href)
                ? 'text-primary font-semibold border-b-2 border-primary'
                : 'text-text-muted hover:text-primary hover:bg-bg-alt'
            }`}
          >
            {link.label}
          </a>
        </li>
      ))}
      <li>
        <a
          href="mailto:contact@movetodigital.au"
          class="ml-2 px-4 py-2 text-sm font-semibold text-surface bg-primary rounded-lg hover:bg-primary-dark transition-colors"
        >
          Contact
        </a>
      </li>
    </ul>

    {/* Mobile hamburger button */}
    <button
      id="mobile-menu-btn"
      type="button"
      class="md:hidden relative w-10 h-10 flex items-center justify-center rounded-md text-text-muted hover:text-primary hover:bg-bg-alt transition-colors"
      aria-label="Open menu"
      aria-expanded="false"
      aria-controls="mobile-menu"
    >
      <span class="hamburger-lines">
        <span class="block w-5 h-0.5 bg-current transition-all duration-300 origin-center"></span>
        <span class="block w-5 h-0.5 bg-current transition-all duration-300 mt-1.5"></span>
        <span class="block w-5 h-0.5 bg-current transition-all duration-300 mt-1.5"></span>
      </span>
    </button>
  </nav>
</header>

{/* Mobile menu overlay — outside header to avoid stacking context issues */}
<div
  id="mobile-menu"
  class="md:hidden fixed inset-0 top-16 z-[45] hidden"
  style="background-color: rgba(255, 255, 255, 0.98); backdrop-filter: blur(16px); -webkit-backdrop-filter: blur(16px);"
  role="dialog"
  aria-label="Mobile navigation"
>
  <nav class="flex flex-col items-center justify-center h-full gap-2">
    {navLinks.map(link => (
      <a
        href={link.href}
        class={`px-6 py-3 text-lg font-medium rounded-lg transition-colors ${
          isActive(link.href)
            ? 'text-primary font-semibold'
            : 'text-secondary hover:text-primary hover:bg-bg-alt'
        }`}
      >
        {link.label}
      </a>
    ))}
    <a
      href="mailto:contact@movetodigital.au"
      class="mt-4 px-8 py-3 text-lg font-semibold text-surface bg-primary rounded-lg hover:bg-primary-dark transition-colors"
    >
      Contact
    </a>
  </nav>
</div>

{/* Spacer to offset fixed header */}
<div class="h-16"></div>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  if (btn && menu) {
    const lines = btn.querySelectorAll('.hamburger-lines span');

    btn.addEventListener('click', () => {
      const isOpen = btn.getAttribute('aria-expanded') === 'true';
      btn.setAttribute('aria-expanded', String(!isOpen));
      btn.setAttribute('aria-label', isOpen ? 'Open menu' : 'Close menu');
      menu.classList.toggle('hidden');

      // Animate hamburger to X
      if (!isOpen) {
        lines[0].style.transform = 'translateY(8px) rotate(45deg)';
        lines[1].style.opacity = '0';
        lines[2].style.transform = 'translateY(-8px) rotate(-45deg)';
        document.body.style.overflow = 'hidden';
      } else {
        lines[0].style.transform = '';
        lines[1].style.opacity = '';
        lines[2].style.transform = '';
        document.body.style.overflow = '';
      }
    });

    // Close on Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && btn.getAttribute('aria-expanded') === 'true') {
        btn.click();
      }
    });

    // Close when a nav link is clicked
    menu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        if (btn.getAttribute('aria-expanded') === 'true') {
          btn.click();
        }
      });
    });
  }
</script>
