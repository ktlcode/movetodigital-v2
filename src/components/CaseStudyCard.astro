---
interface Props {
  title: string;
  engagement: string;
}

const { title, engagement } = Astro.props;
---

<article class="py-16 md:py-20">
  <header class="mb-10">
    <h2 class="font-[family-name:var(--font-family-heading)] text-3xl md:text-4xl font-semibold text-text mb-3">
      {title}
    </h2>
    <span class="inline-block text-xs uppercase tracking-widest text-text-muted font-semibold bg-bg-alt border border-border rounded-full px-4 py-1.5">
      {engagement}
    </span>
  </header>
  <div class="space-y-10">
    <slot />
  </div>
</article>
